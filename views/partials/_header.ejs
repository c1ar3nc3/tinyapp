<header>
  <nav class="navbar navbar-expand-md navbar-dark bg-success">
    <a class="navbar-brand" href="/urls">TinyApp</a>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavAltMarkup" aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
      <div class="navbar-nav">
        <a class="nav-item nav-link" href="/urls">My URLs</a>
        <a class="nav-item nav-link" href="/urls/new">Create New URL</a>
      </div>
    </div>
    <% if(!user) { %>
      <a class="nav-item nav-link" href="/register" style="background-color: rgb(182, 252, 171); margin: 10px"><b>Register</b></a>                 
      <a class="nav-item nav-link" href="/login" style="background-color: rgb(182, 252, 171); margin: 10px"><b>Login</b></a>     
<% } else { %>
  <form class="form-inline" action="/logout" method="POST">
    <div class="form-group mb-2">
      <label for="name"><em>Logged in as <%= user.email %></em></label>
      <button type="logout" class="btn btn-primary" href="/logout" style="background-color:black;">Logout</button>
    </div>
  </form>
<% } %>
  </nav>
</header>